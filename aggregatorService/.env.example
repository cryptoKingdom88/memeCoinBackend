# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=trade-info
KAFKA_CONSUMER_GROUP=aggregator-service

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# Time Windows Configuration (comma-separated)
TIME_WINDOWS=1min,5min,15min,30min,1hour

# Maintenance Configuration
MAINTENANCE_INTERVAL=60s
STALE_THRESHOLD=10s

# Worker Pool Configuration
MAX_WORKERS=100
MAX_TOKEN_PROCESSORS=1000

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=8080

# Logging Configuration
# LOG_LEVEL options: DEBUG, INFO, WARN, ERROR, FATAL
# WARN is recommended for production to reduce log noise
# Only batch processing completion logs will be shown at INFO level
LOG_LEVEL=WARN

# Performance Tuning Configuration
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100ms
REDIS_PIPELINE_SIZE=100
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
REDIS_IDLE_TIMEOUT=5m
REDIS_MAX_CONN_AGE=30m

# Memory Optimization
GC_TARGET_PERCENTAGE=100
MEMORY_LIMIT_MB=512
TRADE_BUFFER_SIZE=1000

# Concurrency Tuning
PROCESSOR_CHANNEL_SIZE=1000
WORKER_QUEUE_SIZE=10000
BATCH_PROCESSING_SIZE=100